package com.example.demo.ioc.step5;

import org.springframework.stereotype.Component;

// <bean id="hyundaiMaker" class="com.example.demo.ioc.step5.HyundaiMaker>
@Component("hyundaiMaker") // id를 생략하면 클래스명을 id로 사용한다. 단, id는 소문자로 시작된다.
public class HyundaiMaker implements CarMaker {
	@Override
	public Car sell(Money money) {
		System.out.println("HyundaiMaker: sell(Money money) called");
		
		System.out.println("HyundaiMaker: " + money.getAmount() + "원을 차 값으로 받는다." );
		
		Car car = new Car("Sonata");
		System.out.println("HyundaiMaker: " + car.getName() + "을/를 만들어 판다.");

		return car;
	}
}
